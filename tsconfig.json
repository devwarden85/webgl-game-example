{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom"],                 
    "module": "es2020",  
    "moduleResolution": "node",                     
    "strict": true,                        
    "esModuleInterop": true,               
    "skipLibCheck": true,                  
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                    
    "rootDir": "./src",                    
    "sourceMap": true                      
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
